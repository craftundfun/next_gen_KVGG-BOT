{
	auto_https off
}

:80 {
	reverse_proxy /* frontend:3000 {
		transport http {
			versions h1h2
		}
	}

	reverse_proxy /auth/* backend:8000
	reverse_proxy /api/* backend:8000

	header_up Cache-Control "no-transform"
}

:443 {
	reverse_proxy /* frontend:3000 {
		transport http {
			versions h1h2
		}
	}

	reverse_proxy /auth/* backend:8000
	reverse_proxy /api/* backend:8000

	header_up Cache-Control "no-transform"

	tls /etc/certs/localhost.pem /etc/certs/localhost-key.pem
}